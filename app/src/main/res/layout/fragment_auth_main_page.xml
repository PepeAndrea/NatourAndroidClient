<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".UI.View.AuthMainPage.AuthMainPage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img" />

    <TextView
        android:id="@+id/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NaTour"
        android:textColor="#669944"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/AppDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:layout_marginTop="20dp"
        android:text="Unisciti alla piÃ¹ grande community di escursionisti!"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/AppTitle"
        app:layout_constraintStart_toStartOf="@+id/AppTitle"
        app:layout_constraintTop_toBottomOf="@+id/AppTitle" />

    <Button
        android:id="@+id/FacebookLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continua con Facebook"
        app:layout_constraintEnd_toEndOf="@+id/AppDescription"
        app:layout_constraintStart_toStartOf="@+id/AppDescription"
        app:layout_constraintTop_toBottomOf="@+id/AppDescription" />

    <Button
        android:id="@+id/GoogleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continua con Google"
        app:layout_constraintEnd_toEndOf="@+id/FacebookLogin"
        app:layout_constraintStart_toStartOf="@+id/FacebookLogin"
        app:layout_constraintTop_toBottomOf="@+id/FacebookLogin" />

    <Button
        android:id="@+id/EmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continua con Email"
        app:layout_constraintEnd_toEndOf="@+id/GoogleLogin"
        app:layout_constraintStart_toStartOf="@+id/GoogleLogin"
        app:layout_constraintTop_toBottomOf="@+id/GoogleLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>